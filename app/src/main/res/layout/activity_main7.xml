<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenshot_2025_09_07_143131"
    android:orientation="vertical"
    tools:context=".MainActivity7">

    <Button
        android:id="@+id/button10"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#0D0606"
        android:text="Return"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="128dp"
        android:layout_height="65dp"
        android:layout_marginLeft="272dp"
        android:layout_marginTop="-65dp"
        android:backgroundTint="#0D0606"
        android:text="Next"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Life Skills"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Fee:R1 500"
        android:textColor="@color/white"
        android:textSize="26dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Provides skills to navigate basic life necessities"
        android:textColor="@color/white"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="202dp"
        android:textStyle="bold"
        android:text="Details:"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Opening a bank account"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Basic labour law (know your rights)"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Basic reading and writing literacy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Basic numeric literacy"/>

</LinearLayout>