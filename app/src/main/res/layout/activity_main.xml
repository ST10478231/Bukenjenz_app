<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/screenshot_2025_09_06_194624">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Empowering"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"/>

        <!-- Details Section -->
        <TextView
            android:id="@+id/detailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empowering the Nation was established in 2022 and offers courses in Johannesburg. Hundreds of domestic workers and gardeners have been trained on both the six-month long Learnerships and six week Short Skills training Programmes to empower themsevkes and can provide more marketable skills."
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white" />

        <!-- About Us Section -->
        <TextView
            android:id="@+id/aboutUsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/aboutUsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empowering the Nation is a non-profit organization dedicated to providing high-quality education and training to domestic workers and gardeners in Johannesburg. Our mission is to empower individuals with the skills and knowledge they need to improve their living and contribute positively to their communities.
We offer a range of courses, including six-month Learnerships and six-week Short Skills training Programmes, designed to equip you with practical skills that are in demand in the job market."
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"/>

        <!-- Discover Section -->
        <TextView
            android:id="@+id/discoverTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/discoverText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select from a range of courses available. You can select more than one course. The more courses you select, the more discount you receive!"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/discount1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• One Course: No Discount"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/discount2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Two Courses: 5% Discount"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/discount3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Three Courses: 10% Discount"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/discount4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• More than three Courses: 15% Discount"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white" />

        <!-- Start Button -->
        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START"
            android:backgroundTint="@color/black"/>

    </LinearLayout>
</ScrollView>

