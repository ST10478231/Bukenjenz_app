<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenshot_2025_09_06_204115"
    android:orientation="vertical"
    tools:context=".MainActivity2" >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Explain what empowering the nation does"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0E0F0E"
        android:text="Six Month Courses" />

    <Button
        android:id="@+id/button7"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="#0B0B0A"
        android:text="Six Week Courses" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Discont details"
        android:textColor="@color/white" />
</LinearLayout>




